{
  "name": "ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/ui/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project ui --web",
  "targets": {
    "res:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run rescript build",
        "cwd": "{projectRoot}"
      },
      "inputs": ["{projectRoot}/rescript.json", "{projectRoot}/src/res/**.res"],
      "outputs": [
        "{projectRoot}/src/res/**.bs.js",
        "{projectRoot}/src/res/**.gen.ts"
      ]
    },
    "res:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run rescript -w",
        "cwd": "{projectRoot}"
      },
      "inputs": ["{projectRoot}/rescript.json", "{projectRoot}/src/res/**.res"],
      "outputs": [
        "{projectRoot}/src/res/**.bs.js",
        "{projectRoot}/src/res/**.gen.ts"
      ]
    },
    "res:dev:trace": {
      "command": "RUST_BACKTRACE=1 bun run rewatch",
      "inputs": [
        "{projectRoot}/rescript.json",
        "{projectRoot}/src/index.ts",
        "{projectRoot}/src/**.res"
      ],
      "outputs": [
        "{projectRoot}/src/index.ts",
        "{projectRoot}/src/**.bs.js",
        "{projectRoot}/src/**.gen.ts"
      ]
    }
  }
}
