{
  "name": "arteflix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/arteflix",
  "projectType": "application",
  "tags": [],
  "targets": {
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node apps/arteflix/scripts/generate-categories.mjs"
      },
      "inputs": [
        "{projectRoot}/arteRoutes/fr.json",
        "{projectRoot}/arteRoutes/de.json",
        "{projectRoot}/arteRoutes/en.json",
        "{projectRoot}/arteRoutes/es.json",
        "{projectRoot}/arteRoutes/pl.json",
        "{projectRoot}/arteRoutes/it.json",
        "{projectRoot}/scripts/generate-categories.mjs"
      ],
      "outputs": ["{projectRoot}/arteRoutes/categories.json"]
    },
    "res:dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["codegen"],
      "options": {
        "command": "bun run rescript -w"
      },
      "inputs": ["{projectRoot}/src/res/**.res"],
      "outputs": [
        "{projectRoot}/src/res/**.bs.mjs",
        "{projectRoot}/src/res/**.gen.ts"
      ]
    },
    "res:build": {
      "executor": "nx:run-commands",
      "dependsOn": ["codegen"],
      "options": {
        "command": "bun run rescript build"
      },
      "inputs": ["{projectRoot}/src/res/**.res"],
      "outputs": [
        "{projectRoot}/src/res/**.bs.mjs",
        "{projectRoot}/src/res/**.gen.ts"
      ]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf apps/arteflix/.next"
      }
    },
    "all:dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run arteflix:res:dev", "nx run arteflix:dev"],
        "parallel": true
      }
    },
    "all:build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run arteflix:res:build", "nx run arteflix:build"],
        "parallel": false
      }
    }
  }
}
